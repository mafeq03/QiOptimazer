<h2>Edit Herb Information</h2>

<form action="/herbs/edit?herb_id={{herb._id}}" method="post">
  <label for="">Name:</label>
  <input type="text" name="title" value="{{herb.title}}">

  <label for="">Description:</label>
  <input type="text" name="description" value="{{herb.description}}">

  <label for="image">Image</label>
  <input type="file" name="image" value="{{herb.image}}">

  <label for="">Symptoms:</label>
  <input type="text" name="symptoms" value="{{herb.symptoms}">



  <button type="submit">EDIT</button>
</form>