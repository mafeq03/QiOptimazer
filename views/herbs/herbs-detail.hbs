<h1>{{herb.name}}</h1>

<div id="herb_pic">
  {{herb.image}}
</div>
<div id="herb_info">
<b>Description:</b>
<p>{{herb.description}}</p>
<b>What it can cure:</b>
<p>{{herb.symptoms}}</p>
</div>

<h3>Reviews</h3>
{{#each herb.reviews}}
<div class="herb-review">
  <p>{{herb.comments}}</p>
  <span>{{herb.user}}</span>
</div>
{{/each}}

<h4>Add a review</h4>
<form action="/reviews/add?herb_id={{herb._id}}" method="post">
  <label for="">User:</label>
  <input type="text" name="user">

  <label for="">Comments:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>



<a href="/welcome">Return</a>
