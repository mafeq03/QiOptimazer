<h1>{{herb.name}}</h1>

<div id="herb_pic">
 <img src= "{{herb.image}}">
</div>
<div id="herb_info">
<b>Description:</b>
<p>{{herb.description}}</p>
<b>What it can cure:</b>
<p>{{herb.symptoms}}</p>
</div>

<h3>Reviews</h3>
{{#each herb.reviews}}
<div class="herb-review">
  <p>{{comments}}</p>
  <span>{{user}}</span>
</div>
{{/each}}

<h4>Add a review</h4>
<form action="/herbs/reviews/add?herb_id={{herb._id}}" method="post">
  <label for="">User:</label>
  <input type="text" name="user">

  <label for="">Comments:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>

<h3>Add it to my Treatments</h3>
<form action="/profile/treatments/add?user_id={{user}}" method="post">
  <label for="">Type:</label>
  <input type="text" name="name" value ="{{herb.name}}">
  <div>
    <label for="date_start-input">
      When did you begin?
    </label>
    <input type="date" name="date" id="date_start-input">
  </div>
  <label for="">How many times a day?</label>
  <textarea type="number" name="time"></textarea>
   <label for="">For how long?</label>
  <textarea type="text" name="duration"></textarea>
  <label for="">Your experience:</label>
  <textarea type="text" name="comments"></textarea>



<form action="/profile/treatments/add?user_id={{user}}" method="post">
  <label for="">Type:</label>
  <input type="text" name="name" value ="{{herb.name}}">
  <div>
    <label for="date-input">
      When did you begin?
    </label>
    <input type="date" name="date" id="date-input">
  </div>
  <label for="">How many times a day?</label>
  <textarea type="number" name="time"></textarea>
  <label for="">Tell us your experience:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>


