<h1>{{this.name}}</h1>

<div id="tech_pic">
  {{this.image}}
</div>
<div id="tech_info">
<b>Description:</b>
<p>{{this.description}}</p>
<b>What it can cure:</b>
<p>{{this.symptoms}}</p>
</div>

<h3>Reviews</h3>
{{#each other.reviews}}
<div class="tech-review">
  <p>{{this.comments}}</p>
  <span>{{this.user}}</span>
</div>
{{/each}}

<h4>Add a review</h4>
<form action="/reviews/add?other_id={{other._id}}" method="post">
  <label for="">User:</label>
  <input type="text" name="user">

  <label for="">Comments:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>



<a href="/welcome">Return</a>
