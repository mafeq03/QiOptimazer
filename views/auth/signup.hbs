<h2>{{title}}</h2>

<p>Welcome, we hope to help you find an alternative way of living</p>

{{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
{{/if}}

<!-- Default form register -->
<form action="/signup" method="post" class="text-center border border-light p-5">

    <p class="h4 mb-4"><h1>Sign up</h1></p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
        <input type="text" name="name" id="name-input" class="form-control" placeholder="Your name">
        </div>
        <div class="col">
            <!-- Username -->
            <input  type="text" name="username" id="username-input"  class="form-control" placeholder="User Name">
        </div>
    </div>

    <!-- E-mail -->
    <input type="email" name="email" id="email-input" class="form-control mb-4" placeholder="E-mail">

    <!-- Password -->
    <input  type="password" name="password" id="password-input" class="form-control" placeholder="Password">
   <br>
    <!-- Location -->
    <input type="text" name="location" id="location-input" class="form-control" placeholder="Your location">
   
<br>     
<div class="col">
   <label for="picture"> Profile Picture</label>
    <input type="file" name="photo" id="profilepic"> 
</div>

<!-- Sign up button -->
    <button class="btn btn-info my-4 btn-block" type="submit">Create New Account</button>

<br>
    <!-- Terms of service -->
    <p>By clicking
        <em>Sign up</em> you agree to our
        <a href="" target="_blank">terms of service</a> and
        <a href="" target="_blank">terms of service</a>. </p>

</form>


